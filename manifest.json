{
  "name": "Skinbid x Pricempire",
  "description": "Adds a few pricing information on Skinbid items description (auctions) fetched from Pricempire",
  "version": "1.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "persistant": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://skinbid.com/auctions/*"
      ],
      "js": [
        "utils.js",
        "skinbid.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://pricempire.com/*"
      ],
      "js": [
        "utils.js",
        "pricempire.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs"
  ]
}